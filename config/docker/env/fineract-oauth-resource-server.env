# OAuth2 Resource Server Configuration cho Fineract
# Spring Boot OAuth2 Resource Server
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=http://keycloak:8080/realms/fineract
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=http://keycloak:8080/realms/fineract/protocol/openid-connect/certs
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_AUDIENCE=account
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_CLOCK_SKEW=60

# OAuth2 Client Configuration
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_KEYCLOAK_CLIENT_ID=community-app
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_KEYCLOAK_CLIENT_SECRET=real-client-secret-123
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_KEYCLOAK_SCOPE=openid,profile,email
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_KEYCLOAK_AUTHORIZATION_GRANT_TYPE=authorization_code
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_KEYCLOAK_REDIRECT_URI=http://localhost:3000/callback

# JWT Claims Mapping
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_CLAIM_TO_PRINCIPAL=preferred_username
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_CLAIM_TO_AUTHORITIES=realm_access.roles

# OAuth2 Resource Server Enabled
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ENABLED=true
